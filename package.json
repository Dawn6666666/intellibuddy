{
  "name": "intellibuddy-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "智学伴 - AI智能学习助手",
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "concurrently \"pnpm:dev:frontend\" \"pnpm:dev:backend\"",
    "dev:frontend": "pnpm --filter frontend dev",
    "dev:backend": "pnpm --filter backend dev",
    "build": "pnpm -C frontend build && pnpm -C backend build",
    "vercel-build": "pnpm -C frontend build && pnpm -C backend build",
    "build:frontend": "pnpm --filter frontend build",
    "build:backend": "pnpm --filter backend build",
    "lint": "pnpm --filter frontend lint && pnpm --filter backend lint",
    "format": "pnpm --filter frontend format && pnpm --filter backend format",
    "clean": "pnpm --filter frontend clean && pnpm --filter backend clean && rimraf node_modules",
    "clean:modules": "rimraf node_modules frontend/node_modules backend/node_modules",
    "clean:dist": "rimraf frontend/dist backend/dist",
    "reinstall": "pnpm clean:modules && pnpm install"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "bcryptjs": "^3.0.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.2",
    "multer": "^1.4.5-lts.1",
    "passport": "^0.7.0",
    "passport-github2": "^0.1.12",
    "passport-qq": "^0.1.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.5"
  },
  "pnpm": {
    "overrides": {
      "@types/node": "20.19.21",
      "typescript": "5.9.2",
      "axios": "^1.12.2"
    },
    "peerDependencyRules": {
      "allowedVersions": {
        "vue": "^3.5.0",
        "vite": "^5.0.0"
      }
    }
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0",
    "npm": "please-use-pnpm",
    "yarn": "please-use-pnpm"
  }
}

